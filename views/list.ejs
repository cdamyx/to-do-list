<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <div class="navLink">
      <a href="/completed">View completed items</a>
    </div>

    <% newListItems.forEach((item) => { %>
      <form action="/completed" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%=item._id%>" aria-label="Complete <%=item.name%>" onChange="this.form.submit()">
          <p><%=  item.name  %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
      </form>
    <% }) %>

